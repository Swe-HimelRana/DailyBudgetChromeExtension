{
    "manifest_version": 2,
    "name": "Daily Budget",
    "version": "1.0.0",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "description": "Count your daily budget and spending with Daily Budget",
    "options_page": "src/html/options.html",
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "src/html/popup.html",
        "default_title": "Your daily budget and spending"
    },
    "background":{
        "scripts": ["eventPage.js"],
        "persistent": false 
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]

}